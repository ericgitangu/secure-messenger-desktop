{
  "name": "secure-messenger-desktop",
  "productName": "Secure Messenger Desktop",
  "version": "1.0.0",
  "description": "Technical assessment: Electron + React + TypeScript secure messenger client â€” Chat List + Sync Simulator",
  "main": ".vite/build/main.js",
  "private": true,
  "scripts": {
    "prestart": "./scripts/ensure-native.sh electron",
    "start": "electron-forge start",
    "predev": "./scripts/ensure-native.sh electron",
    "dev": "electron-forge start",
    "prepackage": "./scripts/ensure-native.sh electron",
    "package": "electron-forge package",
    "premake": "./scripts/ensure-native.sh electron",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "eslint --ext .ts,.tsx src/",
    "lint:fix": "eslint --ext .ts,.tsx src/ --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\"",
    "pretest": "./scripts/ensure-native.sh node",
    "test": "vitest run",
    "pretest:watch": "./scripts/ensure-native.sh node",
    "test:watch": "vitest",
    "pretest:coverage": "./scripts/ensure-native.sh node",
    "test:coverage": "vitest run --coverage",
    "server:dev": "concurrently \"vite --config vite.web.config.mts\" \"tsx src/server/index.ts\"",
    "server:start": "node dist/server/index.cjs",
    "build:renderer": "vite build --config vite.web.config.mts",
    "build:server": "vite build --config vite.server.config.mts",
    "build:web": "pnpm build:renderer && pnpm build:server",
    "start:full": "./scripts/start-full-stack.sh",
    "docker:up": "docker compose up --build",
    "docker:down": "docker compose down",
    "docker:native": "docker compose -f docker-compose.native.yml up -d",
    "docker:native:down": "docker compose -f docker-compose.native.yml down",
    "prepare": "husky"
  },
  "keywords": [
    "electron",
    "react",
    "typescript",
    "messenger",
    "secure",
    "sqlite",
    "websocket",
    "redux-toolkit"
  ],
  "author": {
    "name": "Eric Gitangu",
    "email": "developer.ericgitangu@gmail.com",
    "url": "https://developer.ericgitangu.com"
  },
  "license": "MIT",
  "dependencies": {
